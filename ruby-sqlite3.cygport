inherit rubygem

NAME="ruby-sqlite3"
VERSION=1.3.9
RELEASE=1
CATEGORY="Ruby"
SUMMARY="Ruby SQLite3 extension"
DESCRIPTION="This module allows Ruby programs to interface with the SQLite3
database engine."

PKG_NAMES="${NAME} ${NAME}-doc"
ruby_sqlite3_CONTENTS="${RUBYGEM_EXTDIR#/} ${RUBYGEM_INSTDIR#/} ${RUBYGEM_SPEC#/}"
ruby_sqlite3_doc_CONTENTS=${RUBYGEM_DOCDIR#/}
